generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  nome          String
  role          String    @default("USER")
  ativo         Boolean   @default(true)
  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt
}

model Material {
  id            Int              @id @default(autoincrement())
  nome          String
  descricao     String?
  quantidade    Int
  localizacao   String?
  estoqueMinimo Int              @default(5)
  categoria     String?
  ativo         Boolean          @default(true)
  criadoEm      DateTime         @default(now())
  atualizadoEm  DateTime         @default(now()) @updatedAt
  movimentacoes Movimentacao[]
}


model Movimentacao {
  id                 Int      @id @default(autoincrement())
  materialId         Int
  material           Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  tipo               String   // "entrada" ou "saida"
  quantidade         Int
  tecnico            String   // Nome do usuário que fez a movimentação
  userId             Int?     // ID do usuário que fez a movimentação
  observacao         String?
  dataHora           DateTime @default(now())
  quantidadeAnterior Int
  quantidadeAtual    Int
}